
.ribbon-wrapper {
  font-family: sans-serif;
  background: #1f1f1f;
  color: #ddd;
  border-bottom: 1px solid #444;
}

.ribbon-tabs {
  display: flex;
  height: 40px;
  align-items: center;
  padding: 0 12px;
  background: #2b2b2b;
}

.ribbon-tab {
  margin-right: 20px;
  padding: 10px 12px;
  cursor: pointer;
  border-bottom: 3px solid transparent;
}

.ribbon-tab.active {
  border-bottom: 3px solid #00aaff;
  color: #00aaff;
}

.ribbon-content {
  display: none;
  background: #292929;
  padding: 10px 20px;
  border-top: 1px solid #444;
  display: flex;
  gap: 20px;
}

.ribbon-content.active {
  display: flex;
}

.ribbon-group {
  border: 1px solid #444;
  padding: 10px;
  width: 120px;
  text-align: center;
  background: #1a1a1a;
  box-shadow: inset 0 0 4px #000;
}

.ribbon-group label {
  display: block;
  margin-top: 8px;
  font-size: 11px;
  color: #888;
}
